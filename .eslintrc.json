{
    "plugins":["jest"],
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true,
        "jest": true
    },
    "extends": ["kentcdodds", "plugin:jest/recommended"],
    "parserOptions": {
        "ecmaVersion": "latest"
    },
    "ignorePatterns": [".env", "node_modules/", ".husky/", "*.json", "downloader/downloads/**", ".DS_Store", ".gitignore"],
    "rules": {
        "consistent-return": 0,
        "no-await-in-loop": 0
    }
}
